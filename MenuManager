import java.util.Scanner;

public class MenuManager {
	public static void main(String[] args) {

		Scanner input = new Scanner(System.in);
		RamenManager ramanManager = new RamenManager(input);
		int num =-1;
		
		while(num !=5) {
			System.out.println("***Cup-Ramen Manager***");
			System.out.println("Select one number between 1-5");
			System.out.println("1. Add New Cup-Ramen");
			System.out.println("2. Delete Cup-Ramen");
			System.out.println("3. Edit Cup-Ramen");
			System.out.println("4. View Cup-Ramen");
			System.out.println("5. Exit");
			num=input.nextInt();
			if (num ==1) {
				ramanManager.addCupRamen();
			}
			else if (num ==2) {
				ramanManager.deleteCupRamen();
			}
			else if (num ==3) {
				ramanManager.editCupRamen();
			}
			else if (num ==4) {
				ramanManager.viewCupRamen();
			}
			else {
				continue;
			}
			}
	}
}
