import java.util.ArrayList;
import java.util.Scanner;

import ramen.NoSoup;
import ramen.Ramen;
import ramen.WhiteRamen;

public class RamenManager {
	
	ArrayList<Ramen> ramens = new ArrayList<Ramen>();
	Scanner input;
	
	RamenManager(Scanner input) {
		this.input = input;
	}
	
	public void addCupRamen() {
		int kind = 0;
		Ramen ramen;
		while (kind !=1 && kind != 2 && kind != 3 && kind != 4) {
		System.out.print("Select Ramen Kind : ");
		System.out.print("1 for Noraml Ramen");
		System.out.print("2 for White Ramen");
		System.out.print("3 for No Soup Ramen");
		System.out.print("4 for Etc Ramen");
		kind = input.nextInt();
		if (kind == 1) {
			ramen = new Ramen();
			ramen.getUserInPut(input);
			ramens.add(ramen);
			break;
		}
		else if (kind == 2) {
			ramen = new WhiteRamen();
			ramen.getUserInPut(input);
			ramens.add(ramen);
			break;
		}
		else if (kind == 3) {
			ramen = new NoSoup();
			ramen.getUserInPut(input);
			ramens.add(ramen);
			break;
		}
		else {1
			System.out.print("Select num for Student Kind between 1 ~ 4");
		}
		}
	}
	public void deleteCupRamen() {
		System.out.print("Ramen Number:");
		int number = input.nextInt();
		int index = -1;
		for (int i = 0 ; i < ramens.size(); i++) {
			if (ramens.get(i).getNumber() == number){	
				index = i;
				break;
				}
		}
		if (index >=0) {
			ramens.remove(index);
			System.out.println("The Cup Ramen " + number + "is deleted");
		}
		else { 
			System.out.println("The Cup Ramen has not been registered");
			return;
		}
	}
		
	public void editCupRamen() {
		System.out.print("Ramen Number:");
		int number = input.nextInt();
		for (int i =0; i<ramens.size(); i++) {
			Ramen ramen = ramens.get(i);
			if (ramens.get(i).getNumber() == number) {
				System.out.println("This Ramen to be edited is " + number);

				int num =-1;
				while(num !=6) {
					System.out.println("Cup-Ramen Edit Menu");
					System.out.println("Select one number between 1-6");
					System.out.println("1. Edit Ramen number");
					System.out.println("2. Edit Ramen name");
					System.out.println("3. Edit Ramen price");
					System.out.println("4. Edit Ramen company");
					System.out.println("5. Edit Ramen information");
					System.out.println("6. Exit");
					num=input.nextInt();

					if (num ==1) {
						System.out.print("Ramen Number:");
						int numb = input.nextInt();
						ramen.setNumber(numb);
					}
					else if (num ==2) {
						System.out.print("Ramen Name:");
						String name=input.next();
						ramen.setName(name);
						
					}
					else if (num ==3) {
						System.out.print("Ramen price:");
						int price=input.nextInt();
						ramen.setPrice(price);
					}
					else if (num ==4) {
						System.out.print("Ramen Company:");
						String company=input.next();
						ramen.setCompany(company);
					}
					else if (num ==5) {
						System.out.print("Extra information:");
						String info=input.next();
						ramen.setInfo(info);
					}
					else {
						continue;
					}
				}
				break;
			}
		}
	}

	
	public void viewCupRamens() {
		System.out.println("Total number of registered Cup_Ramen: " + ramens.size());
		for (int i =0; i<ramens.size(); i++) {
			ramens.get(i).printInfo();
		}
		}
	}
