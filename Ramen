package ramen;

import java.util.Scanner;

public abstract class Ramen {
	protected RamenKind kind = RamenKind.Normal;
	protected String name;
	protected int number;
	protected int price ;
	protected String company;
	protected String info;


	public Ramen() {

	}

	public Ramen(String name, int number, int price, String company, String info) {
		this.name=name;
		this.number=number;
		this.price=price;
		this.company=company;
		this.info=info;

	}
	public Ramen(RamenKind kind, String name, int number, int price, String company, String info) {
		this.kind = kind;
		this.name=name;
		this.number=number;
		this.price=price;
		this.company=company;
		this.info=info;
	}
	public Ramen(RamenKind kind) {

	}

	public RamenKind getKind() {
		return kind;
	}

	public void setKind(RamenKind kind) {
		this.kind = kind;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getNumber() {
		return number;
	}

	public void setNumber(int number) {
		this.number = number;
	}

	public int getPrice() {
		return price;
	}

	public void setPrice(int price) {
		this.price = price;
	}

	public String getCompany() {
		return company;
	}

	public void setCompany(String company) {
		this.company = company;
	}

	public String getInfo() {
		return info;
	}

	public void setInfo(String info) {
		this.info = info;
	}

	public abstract void printInfo ();{
}
public void setRamenNumber( RamenInput ramen, Scanner input) {
	System.out.print("Ramen Number:");
	int numb = input.nextInt();
	ramen.setNumber(numb);
}
public void setRamenName( RamenInput ramen, Scanner input) {
	System.out.print("Ramen Name:");
	String numb = input.nextLine();
	ramen.setName(numb);
}
public void setRamenprice( RamenInput ramen, Scanner input) {
	System.out.print("Ramen Price:");
	int numb = input.nextInt();
	ramen.setPrice(numb);
}
public void setCompany( RamenInput ramen, Scanner input) {
	System.out.print("Ramen Company:");
	String numb = input.nextLine();
	ramen.setCompany(numb);
}
public void setInfo( RamenInput ramen, Scanner input) {
	System.out.print("Ramen Info:");
	String numb = input.nextLine();
	ramen.setInfo(numb);
}
}
